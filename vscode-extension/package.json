{
  "name": "claude-codex-collab",
  "displayName": "Claude Codex Collab",
  "description": "3-AI collaborative development: Claude (design) → Codex (implement) → Gemini (analyze)",
  "version": "0.1.0",
  "publisher": "ai-driven-school",
  "repository": {
    "type": "git",
    "url": "https://github.com/AI-Driven-School/claude-codex-collab"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Programming Languages"
  ],
  "keywords": [
    "claude",
    "codex",
    "gemini",
    "ai",
    "copilot",
    "assistant"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claudeCodexCollab.project",
        "title": "Claude Codex: /project - Full Development Flow",
        "icon": "$(rocket)"
      },
      {
        "command": "claudeCodexCollab.requirements",
        "title": "Claude Codex: /requirements - Generate Requirements",
        "icon": "$(file-text)"
      },
      {
        "command": "claudeCodexCollab.implement",
        "title": "Claude Codex: /implement - Implement from Design",
        "icon": "$(code)"
      },
      {
        "command": "claudeCodexCollab.test",
        "title": "Claude Codex: /test - Generate Tests",
        "icon": "$(beaker)"
      },
      {
        "command": "claudeCodexCollab.review",
        "title": "Claude Codex: /review - Code Review",
        "icon": "$(eye)"
      },
      {
        "command": "claudeCodexCollab.analyze",
        "title": "Claude Codex: /analyze - Analyze Codebase",
        "icon": "$(search)"
      },
      {
        "command": "claudeCodexCollab.showUsage",
        "title": "Claude Codex: Show Token Usage",
        "icon": "$(graph)"
      },
      {
        "command": "claudeCodexCollab.openTerminal",
        "title": "Claude Codex: Open Claude Terminal",
        "icon": "$(terminal)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-codex-collab",
          "title": "Claude Codex Collab",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "claude-codex-collab": [
        {
          "id": "claudeCodexCollab.status",
          "name": "AI Status"
        },
        {
          "id": "claudeCodexCollab.commands",
          "name": "Commands"
        },
        {
          "id": "claudeCodexCollab.usage",
          "name": "Token Usage"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "claudeCodexCollab.review",
          "group": "claudeCodex@1",
          "when": "editorHasSelection"
        },
        {
          "command": "claudeCodexCollab.test",
          "group": "claudeCodex@2"
        }
      ],
      "explorer/context": [
        {
          "command": "claudeCodexCollab.analyze",
          "group": "claudeCodex@1",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "configuration": {
      "title": "Claude Codex Collab",
      "properties": {
        "claudeCodexCollab.defaultAI": {
          "type": "string",
          "default": "claude",
          "enum": ["claude", "codex", "gemini"],
          "description": "Default AI for general tasks"
        },
        "claudeCodexCollab.timeout": {
          "type": "number",
          "default": 300,
          "description": "Timeout in seconds for AI operations"
        },
        "claudeCodexCollab.enableFallback": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic fallback to alternative AI on failure"
        },
        "claudeCodexCollab.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show AI status in status bar"
        }
      }
    },
    "keybindings": [
      {
        "command": "claudeCodexCollab.openTerminal",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      },
      {
        "command": "claudeCodexCollab.review",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  }
}
