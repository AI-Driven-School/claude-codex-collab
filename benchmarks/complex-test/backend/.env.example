# ===================================
# StressAgent Pro - 環境変数設定
# ===================================

# Database
DATABASE_URL=postgresql+asyncpg://USER:PASSWORD@HOST:PORT/postgres?sslmode=require

# Debug Mode (本番環境ではfalseに設定)
DEBUG_MODE=false

# JWT設定 (必須 - 本番環境では必ず安全な値を設定)
# 生成コマンド: openssl rand -hex 32
JWT_SECRET_KEY=change-me-generate-with-openssl-rand-hex-32
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Cookie設定
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
COOKIE_DOMAIN=

# CORS設定 (本番環境では適切なオリジンを指定)
CORS_ALLOW_ORIGINS=http://localhost:3000
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOW_HEADERS=Authorization,Content-Type,Accept,Origin,X-Requested-With

# AI (OpenAI)
OPENAI_API_KEY=

# Email (Resend)
EMAIL_PROVIDER=resend
RESEND_API_KEY=
EMAIL_FROM=noreply@your-domain
EMAIL_FROM_NAME=StressAgent Pro

# MongoDB (Chat history)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=stressagent

# Slack/Teams notification (outgoing)
NOTIFICATION_ENABLED=false
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=
